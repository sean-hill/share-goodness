doctype html
html
	head
		link(rel="stylesheet", type="text/css", href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="//fonts.googleapis.com/css?family=Open+Sans:200,300,400,600,700")
		link(rel="stylesheet", type="text/css", href="/css/app.css")

		meta(property="og:title", content="Spread goodness throughout the world")
		meta(property="og:site_name", content="Share Goodness")
		meta(property="og:description", content="#{ text }")
		meta(property="og:image", content="#{ image }")

	body

		div.container.post
			div.row
				div.col-xs-12
					div.logo.clearfix.text-center
						img(src="/img/logo.svg")
					hr
					br
			div.row
				div.col-sm-8.col-xs-12
					img.post-image(src="#{ image }")
					br
					br
					hr.visible-xs
				div.col-sm-4.col-xs.12
					div.post-title.clearfix
						div.avatar
							img(src="#{ avatar }")
						div.title
							h1 #{ name }
							h3(class="timeago", title="#{ date_posted }")
					hr
					p.post-text #{ text }

		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js")
		script(src="/js/timeago.js")

		script.
			$(document).ready(function() {
				$(".timeago").timeago();
			});
